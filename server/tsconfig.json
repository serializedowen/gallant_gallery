{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "outDir": "../dist",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "paths": {
      "*": ["../node_modules/*"]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../client",
    "*.js"
  ]
}
