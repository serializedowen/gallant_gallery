{
  "name": "gallant-gallery",
  "version": "1.0.0",
  "description": "A responsive image gallery with thumbnail generation and infinite scrolling",
  "main": "dist/server.js",
  "scripts": {
    "start": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev:ts",
    "dev:client": "cd client && npm start",
    "build": "cd server && npm run build",
    "client": "npm run dev:client",
    "server": "npm run dev:server",

    "server:install": "cd server && npm install",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "install:all": "npm install && npm run server:install && npm run client:install",
    "heroku-postbuild": "npm run install:all && npm run client:build && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:up:build": "docker-compose up --build",
    "docker:up:d": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:windows": "docker-compose -f docker-compose.windows.yml up --build"
  },
  "keywords": [
    "gallery",
    "images",
    "thumbnails",
    "express",
    "responsive"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22"
  },
  "devDependencies": {
    "@types/node": "^20.19.13"
  }
}
