{
  "name": "gallant-gallery",
  "version": "1.0.0",
  "description": "A responsive image gallery with thumbnail generation and infinite scrolling",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "heroku-postbuild": "npm run client:install && npm run client:build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:up:build": "docker-compose up --build",
    "docker:up:d": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:windows": "docker-compose -f docker-compose.windows.yml up --build"
  },
  "keywords": [
    "gallery",
    "images",
    "thumbnails",
    "express",
    "responsive"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "sharp": "^0.32.6",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
